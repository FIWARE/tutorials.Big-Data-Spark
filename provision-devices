        {"name": "lock","type": "command"}
       ],
       "attributes": [
        {"object_id": "s", "name": "state", "type":"Text"}
       ],
      "static_attributes": [
         {"name":"refStore", "type": "Relationship","value": "Store:002"}
       ]
    },
